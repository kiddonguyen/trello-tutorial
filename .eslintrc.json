{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": ["align-assignments"],
  "rules": {
    "align-assignments/align-assignments": [2, { "requiresOnly": false }],
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "warn",
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
